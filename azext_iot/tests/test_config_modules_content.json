{
    "schemaVersion": "2.0",
    "content": {
        "modulesContent": {
            "$edgeAgent": {
                "properties.desired": {
                    "schemaVersion": "1.0",
                    "runtime": {
                        "type": "docker",
                        "settings": {
                            "minDockerVersion": "v1.23",
                            "loggingOptions": ""
                        }
                    },
                    "systemModules": {
                        "edgeAgent": {
                            "type": "docker",
                            "settings": {
                                "image": "",
                                "createOptions": ""
                            }
                        },
                        "edgeHub": {
                            "type": "docker",
                            "status": "running",
                            "restartPolicy": "always",
                            "settings": {
                                "image": "",
                                "createOptions": ""
                            }
                        }
                    },
                    "modules": {
                        "mongo-server": {
                            "version": "1.1",
                            "type": "docker",
                            "status": "running",
                            "restartPolicy": "on-failure",
                            "settings": {
                                "image": "mongo:1.5",
                                "createOptions": ""
                            }
                        }
                    }
                }
            },
            "$edgeHub": {
                "properties.desired": {
                    "schemaVersion": "1.0",
                    "routes": {
                        "route1": "FROM device messages WHERE $connectedModuleInstanceId=\"adapterglobalconfig\" INTO brokeredEndpoint(\"/modinstances/alertLogic/in\");"
                    },
                    "storeAndForwardConfiguration": {
                        "timeToLiveSecs": 6000
                    }
                }
            },
            "mongo-server": {
                "properties.desired": {}
            }
        }
    },
    "metrics": {
        "queries": {
            "mymetrik": "select deviceId from devices where tags.location='US'"
        }
    }
}